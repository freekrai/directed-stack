{
    "$schema": "https://schema.up.railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "...",
                        "gcc",
                        "python311"
                    ],
                    "aptPkgs": [
                        "build-essential",
                        "glibc-source"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "npx directus bootstrap && npx directus start"
    }
}